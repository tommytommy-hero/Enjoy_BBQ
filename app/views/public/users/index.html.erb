<div class="container">
  <div class="row mx-auto">
    <h4>ユーザー一覧</h4>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>投稿数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user_path(user.id) do %>
                <%= image_tag user.get_user_image(80, 80),
                    style: "border-radius: 50%; width: 80px; height: 80px; object-fit:cover;" %>
              <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= user.recipes.published.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>