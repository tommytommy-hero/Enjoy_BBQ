<div class="container">
  <div class="row">
    <!--ユーザー紹介-->
    <div class="col-3">
      <div class="col-5 mx-auto">
        <%= image_tag @user.get_user_image(100, 100),
            style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
      </div>
        <h4><strong><%= @user.name %></strong></h4>
        <p><%= @user.introduction %></p>
      <table class="table table-sm">
        <tr>
          <th>投稿数</th>
          <th><%= @recipes.published.count %></th>
        </tr>
        <!--フォロー、いいね-->
        <tr>
          <th>フォロー中</th>
          <th><%= link_to "#{ @user.followings.count}", user_followings_path(@user.id) %></th>
        </tr>
        <tr>
          <th>フォロワー</th>
          <th><%= link_to "#{ @user.followers.count}", user_followers_path(@user.id) %></th>
        </tr>
      </table>
      <%= link_to "マイリスト", favorites_user_path(@user), class: "btn btn-outline-info" %>
      <% if @user == current_user and @user.name != "guestuser" %>
        <%= link_to "編集", edit_user_path(@user), class: "btn btn-success" %>
        <div class="contact-form">
          お問い合わせは<%= link_to "こちら", contacts_path %>
        </div>
      <% end %>
    </div>
        <!--投稿一覧-->
    <div class="col-9">
      <div class="row">
      <% if @user == current_user %>
        <div class="col-6">
          <h4>投稿レシピ一覧　<%= @recipes.count %>件</h4>
        </div>
        <div class="col-5 offset-1">
          <%= link_to "新規投稿", new_recipe_path, class: "btn btn-success" %>
        </div>
      </div><br>
        <%= render 'public/recipes/index', recipes: @recipes %>
      <% else %>
      <div class="row">
        <h4>投稿レシピ一覧　<%= @recipes.published.count %>件</h4>
        <%= render 'public/recipes/index', recipes: @recipes.published %>
      <% end %>
    </div>
  </div>
</div>