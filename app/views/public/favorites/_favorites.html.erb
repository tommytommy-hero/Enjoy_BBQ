<% if recipe.favorited_by?(current_user) %>
  <p>
    <%= link_to recipe_favorites_path(recipe), method: :delete, remote: true do %>
      ♥<%= recipe.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to recipe_favorites_path(recipe), method: :post, remote: true do %>
      ♡<%= recipe.favorites.count %>
    <% end %>
  </p>
<% end %>