<h1>Public::Recipes#index</h1>
<p>Find me in app/views/public/recipes/index.html.erb</p>

<%= link_to "投稿画面", new_recipe_path,  class:"btn btn-primary" %>

<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>レシピ名</th>
          <th>ユーザー名</th>
        </tr>
      </thead>
      <tbody>
        <% @recipes.each do |recipe| %>
        <tr>
          <td>
            <%= link_to recipe_path(recipe) do %>
                <%= image_tag recipe.get_recipe_image(100,100) %>
            <% end %>
          </td>
          <td><%= recipe.name %></td>
          <td><%= recipe.user.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>