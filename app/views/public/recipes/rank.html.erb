<div class="container">
  <div class="genre_flame">
    <div class="genre_flame_waku_rank">
      <%= link_to "総合ランキング", rank_recipes_path %>
    </div>
  <% @genres.each do |genre| %>
    <div class="genre_flame_waku_rank">
      <%= link_to genre.name, rank_recipes_path(genre_id: genre.id) %>
    </div>
  <% end %>
  </div>
</div>

<div class="container">
  <% if current_page?(rank_recipes_path(genre_id: @genre.id)) %>
    <h5 class="title-font"><%= @genre.name %>ランキング</h5><br>
  <% else %>
    <h5 class="title-font">総合ランキング</h5><br>
  <% end %>
  <div class="row">
    <%= render 'public/recipes/index', recipes: @recipes %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center mt-5">
    <%= paginate @recipes, theme: 'bootstrap-5' %>
  </div>
</div>