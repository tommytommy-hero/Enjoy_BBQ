  <% recipes.each do |recipe| %>
    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 mx-auto text-center">
      <div class="row-fluid">
          <%= link_to recipe_path(recipe.id) do %>
            <%= image_tag recipe.get_recipe_image(280, 210),
            style: "border-radius: 20px 20px 0 0;" %>
          <% end %>
      </div>
      <div class="recipe-name">
      <%= recipe.name %>
      <% if user_signed_in? %>
        <div id="recipe_<%= recipe.id %>" class="fav-btn">
          <%= render "public/favorites/favorites", recipe: recipe %>
        </div>
      <% end %>
        <div class="recipe-comment-count">
          <i class="far fa-comments"></i>
          <%= recipe.comments.count %>
        </div>
      </div>
    </div><br>
  <% end %>

