<div class="row">
  <% recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="text-center">
          <%= link_to recipe_path(recipe.id) do %>
            <%= image_tag recipe.get_recipe_image(280, 210) ,
            style: "border-radius: 20px;" %>
          <% end %>
        </div>
        <div class="row">
          <p class="col-5 offset-1"><%= recipe.name %></p>
          <div class="col-5">
            by<%= image_tag recipe.user.get_user_image(40, 40),
            style: "border-radius: 50%; object-fit:cover;" %>
            <strong><%= recipe.user.name %></strong>
          </div>
        </div>
        <div class="count ">
          <div id="recipe_<%= recipe.id %>">
            <%= render "public/favorites/favorites", recipe: recipe %>
          </div>
        </div>
      </div><br>
  <% end %>
</div>

