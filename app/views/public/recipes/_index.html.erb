  <% recipes.each do |recipe| %>
    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 text-center">
      <div class="row-fluid">
          <%= link_to recipe_path(recipe.id) do %>
            <%= image_tag recipe.get_recipe_image(280, 210), class: "recipe-foto" %>
          <% end %>
      </div>
        <div class="recipe-name">
          <div class="col-8 recipe-name-link text-left">
            <%= link_to recipe_path(recipe.id) do %>
              <%= recipe.name.truncate(10) %>
            <% end %>
          </div>
        <% if user_signed_in? %>
          <div id="recipe_<%= recipe.id %>" class="col fav-btn">
            <%= render "public/favorites/favorites", recipe: recipe %>
          </div>
        <% end %>
          <div class="col recipe-comment-count">
            <i class="far fa-comments"></i>
            <%= recipe.comments.count %>
          </div>
        </div>
    </div><br>
  <% end %>

