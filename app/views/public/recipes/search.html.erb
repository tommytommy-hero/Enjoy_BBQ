<% if @results.exists? %>
<div class="container-fluid">
  <h2 class="text-center">検索結果</h2>
  <div class="row">
    <div class="col-sm-12 col-md-10">
      <%= page_entries_info @results %>
    </div><br><br>
    <%= render "public/recipes/index", recipes: @results %>
  </div>
  <div class="row justify-content-center mt-5">
    <%= paginate @results, theme: 'bootstrap-5' %>
　</div>
</div>

<% else %>
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto text-center mt-5">
      <h2>検索結果</h2>
      <h3>検索結果はありません</h3>
    </div>
  </div>
</div>
<% end %>


