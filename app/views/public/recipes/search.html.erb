<% if @results.exists? %>
<div class="container">
  <h2>検索結果</h2>
  <div class="row">
  <div class="col-12">
    <%= page_entries_info @results %>
  </div><br><br>
  <%= render "public/recipes/index", recipes: @results %>
  </div>
  <div class="row justify-content-center mt-5">
    <%= paginate @results, theme: 'bootstrap-5' %>
　</div>
</div>

<% else %>
<div class="container">
  <div class="row">
    <h2>検索結果</h2>
    <p>検索結果はありません</p>
  </div>
</div>
<% end %>


