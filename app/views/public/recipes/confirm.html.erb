<h1>下書き</h1>
<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>レシピ名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @recipes.each do |recipe| %>
        <tr>
          <td>
            <%= link_to recipe_path(recipe) do %>
                <%= image_tag recipe.get_recipe_image(100,100) %>
            <% end %>
          </td>
          <td><%= recipe.name %></td>
          <td><%= link_to "編集", edit_recipe_path(recipe.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>