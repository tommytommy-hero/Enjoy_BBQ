<h1>問い合わせフォーム</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_with model: @contact, local: true do |f| %>
      <div class="form-group">
        <%= f.label :お問い合わせ内容 %><br>
        <%= f.text_area :content %>
      </div>
      <div class="form-btn ">
        <%= f.submit "送信", data: {confirm: "下記の内容で送信します。"}, class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div><br>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-6">投稿内容</th>
            <th>投稿日時</th>
            <th>対応状況</th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
          <tr>
            <th><%= contact.content %></th>
            <th><%= contact.created_at.strftime("%Y年%m月%d日") %></th>
            <th><%= contact.process_status_i18n %></th>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
