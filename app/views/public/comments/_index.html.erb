<% if recipe.comments.exists? %>
  <h4>コメント<%= @recipe.comments.count %>件</h4>
  <table class="table">
    <% recipe.comments.each do |comment| %>
    <tr>
      <th class="col-md-2 text-center">
        <%= image_tag comment.user.get_user_image(35, 35),
            style: "border-radius: 50%; object-fit:cover;" %>
        <%= comment.user.name %>
      </th>
      <th class="col-md-6"><%= comment.recipe_comment %></th>
      <th class="col-md-2" id="comment_<%= comment.id %>"><%= render "public/comment_favorites/c_favorites", comment: comment, recipe: recipe %></th>
      <% if comment.user == current_user %>
      <th class="col-md-2"><%= link_to "削除", recipe_comment_path(recipe, comment), method: :delete,
          class: "btn btn-danger btn-sm", data: {confirm: "削除しますか？"}, remote: true %>
      </th>
      <% end %>
    </tr>
    <% end %>
  </table>
<% else %>
  <h4>コメント</h4>
  <p>コメントはまだありません</p>
<% end %>