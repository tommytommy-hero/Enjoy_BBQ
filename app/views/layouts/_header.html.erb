<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <% if user_signed_in? %>
        <a class="navbar-brand" href="/">
          <%= image_tag "BBQ.png", size: "80x80" %>
        </a>
        <%= search_form_for @q, url: search_recipes_path do |f| %>
          <%= f.label :レシピ検索, style: "color: white;" %><br>
          <%= f.search_field :name_or_introduction_cont %>
          <%= f.button :type => "submit", class: "btn btn-outline-light btn-sm" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                 aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "マイページ",user_path(current_user) %>
            </li>
            <li class="nav-item">
              <%= link_to "レシピ一覧",recipes_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ユーザー一覧",users_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト",destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </div>

      <% elsif admin_signed_in? %>
        <a class="navbar-brand" href="/admin"><%= image_tag "BBQ.png", size: "80x80" %></a>
          <%= search_form_for @q, url: search_admin_users_path do |f| %>
            <%= f.label :ユーザー検索, style: "color: white;" %><br>
            <%= f.search_field :name_cont %>
            <%= f.button :type => "submit", class: "btn btn-outline-light btn-sm" do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "レシピ一覧",admin_recipes_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧",admin_genres_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ユーザー一覧",admin_users_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト",destroy_admin_session_path, method: :delete %>
            </li>
          </ul>
        </div>

      <% else %>
        <a class="navbar-brand" href="/"><%= image_tag "BBQ.png", size: "80x80" %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "レシピ一覧",recipes_path %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録",new_user_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン",new_user_session_path %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>
</header>