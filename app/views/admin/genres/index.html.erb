<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto mt-5 text-center">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="field">
        <%= f.label :ジャンル %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div><br>
  <div class="row">
    <div class="col-md-4 mx-auto">
      <table class="table border-bottom">
        <thead>
          <tr>
            <th class="col-3">ジャンル名</th>
            <th class="col-2"></th>
            <th class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
            <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


