
<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h1>Admin::Genres#index</h1>
      <p>Find me in app/views/admin/genres/index.html.erb</p>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="field">
        <%= f.label :ジャンル %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
      <% end %>

      <table class="table border-bottom">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="col-2"><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>


