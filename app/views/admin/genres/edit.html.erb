<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
      <div class="field text-center">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit "変更を保存", class:"btn btn-success btn-sm" %>
      </div>
      <% end %>
    </div>
  </div>
</div>