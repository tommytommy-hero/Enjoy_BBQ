<h1>Admin::Recipes#show</h1>
<p>Find me in app/views/admin/recipes/show.html.erb</p>
<div class="container">
  <h1>詳細ページ</h1>
  <div class="row">
    <div class="col-6">
      <%= image_tag @recipe.get_recipe_image(300,300) %>
          <!--コメント機能-->
      <div class="recipe_index">
        <%= render "admin/comments/index", recipe: @recipe %>
      </div>
    </div>
    <div class="col-6">
        <h2><%= @recipe.name %></h2>
        <h3><%= @recipe.genre.name %></h3>
        <h4>材料</h4>
        <table class="table">
          <thead>
            <tr>
              <th>材料</th>
              <th>個数</th>
            </tr>
          </thead>
          <tbody>
          <% @recipe.ingredients.each do |ingredient| %>
            <tr>
              <td><%= ingredient.name %></td>
              <td><%= ingredient.amount %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <h4>手順</h4>
        <table class="table">
          <thead>
            <tr>
              <th>ステップ</th>
              <th>説明</th>
            </tr>
          </thead>
          <tbody>
          <% @recipe.steps.each do |step| %>
            <tr>
              <td><%= step.number %></td>
              <td><%= step.explanation %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

          <div class="form-btn">
            <%= link_to "編集", edit_recipe_path, class: "btn btn-success" %>
            <%= link_to "削除", @recipe, method: :delete, class: "btn btn-danger", data: {confirm: "削除しますか？"} %>
          </div>

    </div>

  </div>
</div>