    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>レシピ名</th>
          <th>ユーザー</th>
          <th>投稿日</th>
          <th>投稿状況</th>
        </tr>
      </thead>
      <tbody>
        <% recipes.each do |recipe| %>
        <tr>
          <td><%= link_to admin_recipe_path(recipe.id) do %>
                <%= image_tag recipe.get_recipe_image(80, 60) ,
                style: "border-radius: 20px;" %>
              <% end %>
          </td>
          <td><%= link_to admin_recipe_path(recipe.id) do %>
                <%= recipe.name %>
              <% end %>
          </td>
          <td><%= link_to admin_user_path(recipe.user.id) do %>
                <%= recipe.user.name %>
              <% end %>
          </td>
          <td><%= recipe.created_at.strftime("%Y年%m月%d日") %></td>
          <td><%= recipe.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>