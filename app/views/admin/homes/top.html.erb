<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>アドレス</th>
            <th>投稿時間</th>
            <th>対応状況</th>
          </tr>
        </thead>
        <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <th><%= contact.user.name %></th>
            <th><%= contact.user.email %></th>
            <th><%= contact.created_at.strftime("%Y年%m月%d日") %></th>
            <th><%= contact.process_status_i18n %></th>
            <th><%= link_to "確認", admin_contact_path(contact.id), class: "btn btn-outline-info btn-sm" %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


