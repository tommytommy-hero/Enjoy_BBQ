<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <table class="contact-table">
        <tr>
          <th class="contact-table-item">確認中<%= link_to admin_root_path do %>
                <%= @contacts.confirming.count %>件
              <% end %>
          </th>
          <th class="contact-table-item">対応済み<%= @contacts.finished.count %>件</th>
        </tr>
      </table>
    </div>
  </div><br>
  <div class="row"></div>
    <div class="col-md-8 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>アドレス</th>
            <th>投稿時間</th>
            <th>対応状況</th>
          </tr>
        </thead>
        <tbody>
        <% @contacts.finished.each do |contact| %>
          <tr>
            <th><%= contact.user.name %></th>
            <th><%= contact.user.email %></th>
            <th><%= contact.created_at.strftime('%Y/%m/%d %H:%M:%S') %></th>
            <th><%= contact.process_status_i18n %></th>
            <th><%= link_to "確認", admin_contact_path(contact.id), class: "btn btn-outline-info btn-sm" %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
