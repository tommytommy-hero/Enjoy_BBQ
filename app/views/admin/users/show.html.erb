<div class="container">
  <div class="row">
    <!--ユーザー紹介-->
    <div class="col-3">
      <div class="col-5 mx-auto">
        <%= image_tag @user.get_user_image(100, 100),
            style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
      </div>
        <h4><strong><%= @user.name %></strong></h4>
        <p><%= @user.introduction %></p>
      <table class="table table-sm">
        <tr>
          <th>投稿数</th>
          <th><%= @recipes.published.count %></th>
        </tr>
      </table>
        <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-success" %>
    </div>
        <!--投稿一覧-->
    <div class="col-9">
      <div class="row">
        <div class="col-6">
          <h4>投稿レシピ一覧　<%= @recipes.count %>件</h4>
        </div>
      </div><br>
        <%= render "admin/recipes/index", recipes: @recipes %>
    </div>

  </div>
</div>